{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/templates/home.html"
    },
    {
      "src": "/css/(.*)",
      "dest": "/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/js/$1"
    },
    {
      "src": "/templates/images/(.*)",
      "dest": "/templates/images/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/templates/$1"
    }
  ]
} 